{
  "manifest_version": 3,
  "name": "Mindat Autofill",
  "version": "1.0",
  "description": "Autofill the Mindat catalog form using Google Sheet data.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://www.mindat.org/catedit.php"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.mindat.org/catedit.php"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.jpg"
  },
  "web_accessible_resources": [
    {
      "resources": ["mindat_export.csv"],
      "matches": ["https://www.mindat.org/*"]
    }
  ]
}
